{% extends 'base.html.twig' %}

{% block title %}Hello FolioController!
{% endblock %}

{% block body %}
	<section class="articles">
		{% for project in projects %}
			<article>
				<h2>{{project.title}}</h2>

				<div class="metadata">Cat√©gories :
					{% for category in project.categories %}
						<p>{{ category.title }}</p>
					{% endfor %}
				</div>
				<div class="content">
					{% if project.filename %}
						<img src="{{ vich_uploader_asset(project, 'imageFile') | imagine_filter('thumb') }}" alt="" >

					{% endif %}
					{{project.description | raw}}
					<a href="{{project.github}}">Github</a>
					<a href="{{project.weblink}}">Weblink</a>

					<a href="{{path('project_show', {'id': project.id})}}" class="btn btn-primary">Lire la suite</a>
				</div>
			</article>
		{% endfor %}
	</section>

{% endblock %}
